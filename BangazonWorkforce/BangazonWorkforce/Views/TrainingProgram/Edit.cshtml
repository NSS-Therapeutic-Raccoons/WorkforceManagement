@model BangazonWorkforce.Models.ViewModels.TrainingProgramEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>@Html.DisplayFor(model => model.TrainingProgram.Name)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TrainingProgram.Id" />
            <div class="form-group">
                <label asp-for="TrainingProgram.Name" class="control-label"></label>
                <input asp-for="TrainingProgram.Name" class="form-control" />
                <span asp-validation-for="TrainingProgram.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainingProgram.StartDate" class="control-label"></label>
                <input asp-for="TrainingProgram.StartDate" class="form-control" type="text" />
                <span asp-validation-for="TrainingProgram.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainingProgram.EndDate" class="control-label"></label>
                <input asp-for="TrainingProgram.EndDate" class="form-control" type="text" />
                <span asp-validation-for="TrainingProgram.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainingProgram.MaxAttendees" class="control-label"></label>
                <input asp-for="TrainingProgram.MaxAttendees" class="form-control" />
                <span asp-validation-for="TrainingProgram.MaxAttendees" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

