@model BangazonWorkforce.Models.ViewModels.TrainingProgramDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>@Html.DisplayFor(model => model.TrainingProgram.Name)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Html.DisplayFor(model => model.TrainingProgram.Name)</dd>
        <dt>Start Date</dt>
        <dd>@Html.DisplayFor(model => model.TrainingProgram.StartDate)</dd>
        <dt>End Date</dt>
        <dd>@Html.DisplayFor(model => model.TrainingProgram.EndDate)</dd>
        <dt>Maximum Attendees</dt>
        <dd>@Html.DisplayFor(model => model.TrainingProgram.MaxAttendees)</dd>
        <dt>Attendees</dt>
        <dd>
            <ul class=" col-md-4 list-group">
                @foreach (var item in Model.Employees)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">@item.FirstName @item.LastName</li>
                }
            </ul>
        </dd>
    </dl>
    
</div>
<div>
    @if (Model.TrainingProgram.StartDate > DateTime.Today) 
     { 
        <div>
            @Html.ActionLink("Edit", "Edit", new { id = Model.TrainingProgram.Id }) |
        </div>
     }
    <a asp-action="Index">Back to List</a>
</div>
